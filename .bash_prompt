if [[ $COLORTERM = gnome-* && $TERM = xterm ]] && infocmp gnome-256color >/dev/null 2>&1; then
	export TERM=gnome-256color
elif infocmp xterm-256color >/dev/null 2>&1; then
	export TERM=xterm-256color
fi

if tput setaf 1 &> /dev/null; then
	tput sgr0
	RED=$(tput setaf 9)
	GREEN=$(tput setaf 10)
	BLUE=$(tput setaf 12)
	CYAN=$(tput setaf 14)
	YELLOW=$(tput setaf 11)
	WHITE=$(tput setaf 7)
	BOLD=$(tput bold)
	RESET=$(tput sgr0)
else
	RED="\033[1;31m"
	GREEN="\033[1;32m"
	YELLOW="\033[1;33m"
	CYAN="\033[1;36m"
	WHITE="\033[1;37m"
	BLUE = "\033[1;34m"
	BOLD=""
	RESET="\033[m"
fi

export RED
export BLUE
export GREEN
export CYAN
export YELLOW
export WHITE
export BOLD
export RESET

export PS2="\[$ORANGE\]→ \[$RESET\]"
if [ `/usr/bin/whoami` = 'root' ]
then
  # Do not set PS1 for dumb terminals
  if [ "$TERM" != 'dumb'  ] && [ -n "$BASH" ]
  then
    export PS1='\[${BOLD}${RED}\]\u@\[${CYAN}\]\h \[${BLUE}\]\W \$ \[${RESEST}${WHITE}\]\n→ '
    export PS2="→ "
  fi
else
  # Do not set PS1 for dumb terminals
  if [ "$TERM" != 'dumb'  ] && [ -n "$BASH" ]
  then
    export PS1='\[${BOLD}${GREEN}\]\u@\[${CYAN}\]\h \[${BLUE}\]\W \$ \[${RESEST}${WHITE}\]\n→ '
    export PS2="→ "
  fi
fi
